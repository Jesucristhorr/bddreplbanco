doctype html 
html 
    head
        style.

            .logotipo{
                width: 200px;
                height: 100px;
            }

            .boxSize{
                width: 270px;
                height: 30px;
                margin-bottom: 10px;
                border-color: #404040;
                border-width: 0.5px;
            }

            .button{
                width: 277px;
                height: 35px;
                transition-duration: 0.4s;
                cursor: pointer;
                color: #404040;
                border-width: 0px;
                font-family: hero;
            }

            .button1{
                background-color: #4EC2ED;
            }

            .button1:hover {
                background-color: #008CBA;
                color: white;
            }

            .button2{
                background-color: #48FF98;
            }

            .button2:hover{
                background-color: #3ED17E;
                color: white;
            }

            .center{
                display: block;
                margin-left: auto;
                margin-right: auto; 
            }

            .text{
                color: #404040;
                text-align: center;
            }

            .cont {
                display: flex;
                align-content: center;
                justify-content: center;
                width: 100%;
                margin-top: 10px;
            }

            .contenedor {
                display: flex;
                align-content: center;
                justify-content: center;
                width: 100%;
                height: 100%;
            }

            .contenedor2 {
                display: inline-block;
                text-align: center;
                align-content: center;
                justify-content: center;
                flex-direction: column;
                width: 330px;
                height: 400px;

                margin-top: 100px;

                -webkit-box-shadow: 0px 0px 24px 1px rgba(64,64,64,0.64);
                -moz-box-shadow: 0px 0px 24px 1px rgba(64,64,64,0.64);
                box-shadow: 0px 0px 24px 1px rgba(64,64,64,0.64);
            }


    body
        div(class= 'contenedor')

            div(class = 'contenedor2')

                .logotipo(class = 'center')
                    include logo/logoSVG.svg

                input(type = 'text', id = 'usuario', class = 'center boxSize', placeholder= 'Usuario')
                input(type = 'password', id = 'contrasenia', class = 'center boxSize', placeholder= 'Contraseña')
                button(type = 'button', id = 'ingresar', class = 'center button button1') Ingresar
        
                div(class = 'cont')
                    a(href = '/nuevaConstrasenia', style = 'text-decoration: none') ¿Olvidaste tu contraseña?

                p(class = 'text') ___________________________________

                p(class = 'text') ¿Aún no tienes una cuenta?

                button(type = 'button', id = 'crearCuenta', class = 'center button button2') Crear una cuenta
        
