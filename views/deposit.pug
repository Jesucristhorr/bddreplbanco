doctype doctype
html
    head
        style
            include ../public/css/deposit.css
            include ../routes/status.js

        title Depósitos

        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Karla&family=Rubik&display=swap")
             
    body
        header(class='header')

            a(id = 'btn', name = 'atras', class = 'returnAnchor', href = '/status') Atrás

            p.tittle Depósito

            .logotipo
                include ../public/assets/logoSVG.svg

        form(class = 'container', action="/status/deposit/check", method="POST")
            if error
                div(class = 'error')
                    p.description #{error}
            if exito
                div(class = 'success')
                    p.description #{exito}
    
            div(class= 'container2')
                label(for="cuentaAcreditar", class='label-form') Cuenta a depositar
                    br
                    input(type="text", name="cuentaAcreditar", id='cuentaAcreditar', class='form-input', maxlength='10', required)

            p.tittle3 Monto a Depositar

            div(class='inputCurrency') $
                input(type="number" name = "Currency" class = 'inputCurrency' , value= "" , data-type = "currency"
                    , min = "1" , max = "2000", placeholder= "0.00", step="0.01", required )

            button(type='submit', class= 'btn-submit2') Confirmar